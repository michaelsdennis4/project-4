<body class="item">

<% if (session[:is_admin] != 'true') %>
	<h2>Sorry, you do not have permission to access this page.</h2>
	<h4>Please <a href="/login">login</a> to continue</h4>
<% else %>

	<h5 class="topnav">You are logged in as: <%= session[:user_name] %> | <a href="/">HOME</a> | <a href="/admin">ADMIN CENTER</a></h5>

	<h1 class="headline">NEW ITEM</h1>

	<div class="item-form" id="new">

		<%= form_for @item, url: {action: "create"} do |f| %>
			
			<%= f.label :code, "* Code" %>
			<%= f.text_field :code %>
			<%= f.label :caption, "* Caption" %>
			<%= f.text_field :caption %>
			<%= f.label :condition, "Condition" %>
			<%= f.text_field :condition %>
			<%= f.label :measurements, "Measurements" %>
			<%= f.text_field :measurements %>
			<%= f.label :date_acquired, "Date Acquired" %>
			<%= f.date_field :date_acquired %>
			<%= f.label :date_sold, "Date Sold" %>
			<%= f.date_field :date_sold %>
			<%= f.label :purchase_price, "Purchase Price" %>
			<%= f.text_field :purchase_price, {:class => "short"} %>
			<%= f.label :selling_price, "Selling Price" %>
			<%= f.text_field :selling_price, {:class => "short"} %>
			<%= f.label :description, "* Description", {:class => "large"} %>
			<%= f.text_area :description %>

			<%= f.label :is_available, "Item Available?" %>
			<%= f.radio_button(:is_available, "true", {:class => "very_short"}) %>
			<%= f.label(:is_available, "Yes", {:class => "very_short"}) %>
			<%= f.radio_button(:is_available, "false", {:class => "very_short"}) %>
			<%= f.label(:is_available, "No", {:class => "very_short"}) %>
			
			<div id="submit"><%= f.submit "Create", {:class => "button"}  %></div>
		<% end %>

<% end %>

</body>

